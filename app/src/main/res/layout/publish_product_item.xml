<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_vegetable_table_item"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="@dimen/dimen_size_8"
    android:background="@drawable/bg_list_item_click">

    <TextView
        android:id="@+id/tv_vegetable_table_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text=""
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_vegetable_table_item_price"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_vegetable_table_item_name"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:text=""
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_vegetable_table_item_supply"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_vegetable_table_item_price"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:text=""
        android:textSize="16sp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_vegetable_item_picture2"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_toLeftOf="@+id/sdv_vegetable_item_picture1"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@mipmap/icon_main_activity_add_pressed"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundedCornerRadius="5dp"
        android:visibility="gone"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_vegetable_item_picture1"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="35dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@mipmap/icon_main_activity_add_pressed"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundedCornerRadius="5dp"
        android:visibility="gone"/>
</RelativeLayout>